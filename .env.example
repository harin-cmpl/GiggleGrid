# ──────────────────────────────────────────────
# GiggleGrid — Environment Variables
# Copy this file to .env and fill in the values
# ──────────────────────────────────────────────

# AWS
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# S3
PHOTOS_BUCKET=gigglegrid-photos
FRONTEND_BUCKET=gigglegrid-frontend

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID=EXXXXXXXXXX
CUSTOM_DOMAIN=photobooth.example.com

# Lambda
PRESIGNED_URL_EXPIRY_SECONDS=86400
S3_RETENTION_DAYS=7

# Frontend (injected into config.js during deploy)
COUNTDOWN_SECONDS=5
QR_DISPLAY_SECONDS=15
DETECTION_CONFIDENCE=0.7
API_ENDPOINT=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com

# GitHub OIDC (set these as GitHub Secrets)
# AWS_OIDC_ROLE_ARN=arn:aws:iam::123456789012:role/GitHubActionsOIDC
